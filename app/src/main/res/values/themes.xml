<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  Tema base unificado con Material3 -->
    <style name="Theme.InmobiliariaAlone" parent="Theme.Material3.DayNight.NoActionBar">

        <!--  Paleta principal -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!--  Compatibilidad con elementos antiguos -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/teal_700</item>
        <item name="android:windowBackground">@color/white</item>

        <!--  Tipografías base Material3 -->
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Material3.HeadlineMedium</item>

        <!--  Estilos de componentes -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>

        <!--  FIX: Material3 aún no define CardView ni animación de diálogo -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>

    <!--  Sin ActionBar -->
    <style name="Theme.InmobiliariaAlone.NoActionBar" parent="Theme.InmobiliariaAlone">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlays -->
    <style name="Theme.InmobiliariaAlone.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />
    <style name="Theme.InmobiliariaAlone.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!--  Overlay circular completo -->
    <style name="ShapeAppearanceOverlay.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  Overlay de esquinas suaves (por si querés cards menos redondeadas) -->
    <style name="ShapeAppearanceOverlay.Material3.Corner.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--  Overlay para fotos de perfil (versión dedicada, mismo 50%) -->
    <style name="ShapeAppearanceOverlay.Inmobiliaria.ProfilePicture" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
