<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.santisoft.inmobiliariaalone.ui.inicio.InicioFragment"
        android:label="@string/menu_inicio"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.santisoft.inmobiliariaalone.ui.perfil.PerfilFragment"
        android:label="@string/menu_perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/cambiarPasswordFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.perfil.CambiarPasswordFragment"
        android:label="Cambiar contraseña"
        tools:layout="@layout/fragment_cambiar_password" />


    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.santisoft.inmobiliariaalone.ui.inmuebles.InmueblesFragment"
        android:label="@string/menu_inmuebles"
        tools:layout="@layout/fragment_inmueble" >
        <action
            android:id="@+id/action_nav_inmuebles_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
        <action
            android:id="@+id/action_nav_inmuebles_to_agregarInmuebleFragment"
            app:destination="@id/nav_agregarInmuebleFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.santisoft.inmobiliariaalone.ui.logout.SalirFragment"
        android:label="@string/menu_logout"
        tools:layout="@layout/fragment_salir" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.inmuebles.DetalleInmuebleFragment"
        android:label="Detalle del Inmueble"
        tools:layout="@layout/fragment_detalle_inmueble">
        <argument
            android:name="inmueble"
            app:argType="com.santisoft.inmobiliariaalone.model.Inmueble" />
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>
    <!-- Lista -->
    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.santisoft.inmobiliariaalone.ui.inquilinos.InquilinosFragment"
        android:label="@string/menu_inquilinos"
        tools:layout="@layout/fragment_inquilinos">
        <action
            android:id="@+id/action_nav_inquilinos_to_inquilinoDetalleFragment"
            app:destination="@id/inquilinoDetalleFragment" />
    </fragment>

    <!-- Detalle -->
    <fragment
        android:id="@+id/inquilinoDetalleFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.inquilinos.DetalleInquilinoFragment"
        android:label="Inquilino"
        tools:layout="@layout/fragment_detalle_inquilino">
        <argument
            android:name="inquilinoJson"
            app:argType="string" />
    </fragment>

    <!-- ya existente -->
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.santisoft.inmobiliariaalone.ui.contratos.ContratosFragment"
        android:label="Contratos"
        tools:layout="@layout/fragment_contratos">

        <action
            android:id="@+id/action_nav_contratos_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment"/>
    </fragment>

    <fragment
        android:id="@+id/detalleContratoFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.contratos.DetalleContratoFragment"
        android:label="Contrato"
        tools:layout="@layout/fragment_detalle_contrato">

        <!-- agregar -->
        <argument
            android:name="contratoJson"
            app:argType="string"
            android:defaultValue=""/>

        <action
            android:id="@+id/action_detalleContratoFragment_to_pagosFragment"
            app:destination="@id/pagosFragment"/>
    </fragment>


    <!-- pagos ya existente -->
    <fragment
        android:id="@+id/pagosFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.contratos.PagosFragment"
        android:label="Pagos"
        tools:layout="@layout/fragment_pagos">
        <argument
            android:name="contratoId"
            app:argType="integer"/>
    </fragment>


    <fragment
        android:id="@+id/nav_agregarInmuebleFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.inmuebles.AgregarInmuebleFragment"
        android:label="Crera Inmueble"
        tools:layout="@layout/fragment_agregar_inmueble" />

    <fragment
        android:id="@+id/nav_reset_password"
        android:name="com.santisoft.inmobiliariaalone.ui.login.ResetPasswordFragment"
        android:label="Restablecer contraseña"
        tools:layout="@layout/activity_cambiar_password">

        <deepLink
            app:uri="http://192.168.0.100:5157/api/Propietarios/{id}/restablecer-contrasena?token={token}" />

        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="token"
            app:argType="string"
            android:defaultValue="" />
    </fragment>


</navigation>