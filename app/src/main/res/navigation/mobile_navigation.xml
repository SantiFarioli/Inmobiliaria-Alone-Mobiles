<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.santisoft.inmobiliariaalone.ui.inicio.InicioFragment"
        android:label="@string/menu_inicio"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.santisoft.inmobiliariaalone.ui.perfil.PerfilFragment"
        android:label="@string/menu_perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.santisoft.inmobiliariaalone.ui.inmuebles.InmueblesFragment"
        android:label="@string/menu_inmuebles"
        tools:layout="@layout/fragment_inmueble" >
        <action
            android:id="@+id/action_nav_inmuebles_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
        <action
            android:id="@+id/action_nav_inmuebles_to_agregarInmuebleFragment"
            app:destination="@id/nav_agregarInmuebleFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.santisoft.inmobiliariaalone.ui.logout.SalirFragment"
        android:label="@string/menu_logout"
        tools:layout="@layout/fragment_salir" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.inmuebles.DetalleInmuebleFragment"
        android:label="Detalle del Inmueble"
        tools:layout="@layout/fragment_detalle_inmueble">
        <argument
            android:name="inmueble"
            app:argType="com.santisoft.inmobiliariaalone.model.Inmueble" />
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>
    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.santisoft.inmobiliariaalone.ui.inquilinos.InquilinosFragment"
        android:label="@string/menu_inquilinos"
        tools:layout="@layout/fragment_inquilinos" />
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.santisoft.inmobiliariaalone.ui.contratos.ContratosFragment"
        android:label="Contratos"
        tools:layout="@layout/fragment_contratos">
        <action
            android:id="@+id/action_nav_contratos_to_pagosFragment"
            app:destination="@id/pagosFragment"/>
    </fragment>

    <fragment
        android:id="@+id/nav_agregarInmuebleFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.inmuebles.AgregarInmuebleFragment"
        android:label="fragment_agregar_inmueble"
        tools:layout="@layout/fragment_agregar_inmueble" />
    <fragment
        android:id="@+id/pagosFragment"
        android:name="com.santisoft.inmobiliariaalone.ui.contratos.PagosFragment"
        android:label="Pagos"
        tools:layout="@layout/fragment_pagos">
        <argument
            android:name="contratoId"
            app:argType="integer"/>
    </fragment>


</navigation>