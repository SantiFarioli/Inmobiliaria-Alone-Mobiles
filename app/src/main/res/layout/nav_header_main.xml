<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/teal_700"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- ðŸ”¹ Logo -->
    <ImageView
        android:id="@+id/ivLogoHeader"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_house_24"
        android:contentDescription="Logo Inmobiliaria Alone" />

    <!-- ðŸ”¹ Nombre completo -->
    <TextView
        android:id="@+id/tvNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propietario"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- ðŸ”¹ Email -->
    <TextView
        android:id="@+id/tvEmailPropietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario@email.com"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center" />

</LinearLayout>
