<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <!-- ðŸ”¹ Encabezado -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitulo"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        android:text="Mis Contratos Vigentes"
        android:textColor="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSubtitulo"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:text="Listado de contratos activos con sus inquilinos"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- ðŸ”¹ Indicador de carga -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressContratos"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            app:indicatorSize="48dp"
            app:trackThickness="4dp"
            app:indicatorColor="?attr/colorPrimary" />
    </FrameLayout>

    <!-- ðŸ”¹ Lista de contratos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContratos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- ðŸ”¹ Estado vacÃ­o -->
    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_document"
            android:contentDescription="@string/no_hay_contratos"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Full"
            android:alpha="0.8" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_hay_contratos"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</LinearLayout>
