<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.RecuperarContraseniaActivity">

    <EditText
        android:id="@+id/etEmailRecuperacion"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Correo electrónico"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnSolicitarRecuperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar recuperación"
        app:layout_constraintTop_toBottomOf="@id/etEmailRecuperacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>