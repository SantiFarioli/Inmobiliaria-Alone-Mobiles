<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título centrado -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Contrato"
            android:textColor="?attr/colorPrimary"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Card central -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Dirección -->
                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. Rivadavia 1234"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <!-- Inquilino -->
                <TextView
                    android:id="@+id/tvInquilino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laura Gómez"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="8dp" />

                <!-- Fechas -->
                <TextView
                    android:id="@+id/tvFechas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-01-01 – 2025-12-31"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="8dp" />

                <!-- Monto -->
                <TextView
                    android:id="@+id/tvMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$150000.00"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Botón centrado -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerPagos"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Pagos"
                    app:icon="@drawable/ic_money"
                    app:iconTint="?attr/colorOnPrimaryContainer"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
